pkgname=gool
pkgver=0.9.2
pkgrel=1
pkgdesc="Go - Online TV Recorder on Linux"
arch=('x86_64' 'i686')
url="http://github.com/mipimipi/$pkgname/"
license=('GPL3')
depends('ffmpeg')
makedepends=('go' 'xdg-utils')
options=('!strip' '!emptydirs')
source=("http://github.com/mipimipi/$pkgname/archive/v$pkgver.tar.gz")
sha256sums=('bb830ba87f0a94d4bfa56b7a201db4ef714c79fea01de90ba19b30768c1901e2')

build() {
  cd "$pkgname-$pkgver"

  make
}

package() {
  cd "$pkgname-$pkgver"

  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}